<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h2>stop watch</h2>
    <p id="display">00:00</p>
    <button onclick="start()">start</button>
    <button onclick="stop()">stop</button>
    <button onclick="reset()">reset</button>
    <script>
        let seconds=0;
        let intervalId=null;

        function updateDisplay(){
            let minits=String(Math.floor(seconds /60)).padStart(2,'0');
            let secnds=String (seconds % 60).padStart(2,'0');
            document.getElementById("display").textContent=`${minits}:${secnds}`;
        }
        function start(){
            if(!intervalId){
                intervalId=setInterval(()=>{
                    seconds++;
                    updateDisplay();
                },1000)

            }
        }
        function stop(){
            clearInterval(intervalId);
            intervalId=null;

        }
        function reset(){
            stop();
            seconds=0;
            updateDisplay();

        }
    </script>
</body>
</html>
